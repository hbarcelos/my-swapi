{
  "name": "swapi-test",
  "version": "1.0.0",
  "description": "Little SWAPI test",
  "main": "app.js",
  "scripts": {
    "test": "ava",
    "postinstall": "npm run build && npm run db:setup",
    "start": "npm run server:start && npm run client:start",
    "client:start": "http-server ./client -p 3001",
    "server:start": "babel-node server/app.js",
    "server:start:watch": "nodemon -w server/ --exec 'npm run server:start'",
    "db:setup": "mkdir -p ./storage/ && touch ./storage/swapi.db",
    "db:clean": "echo '' > ./storage/swapi.db",
    "build": "webpack",
    "build:watch": "webpack --watch"
  },
  "author": "Henrique Barcelos <rick.hjpbarcelos@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "joi": "^13.0.1",
    "koa": "^2.3.0",
    "koa-body": "^2.5.0",
    "koa-router": "^7.2.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-form": "^2.0.1",
    "react-redux": "^5.0.6",
    "react-select": "^1.0.0-rc.10",
    "react-table": "^6.6.0",
    "redux": "^3.7.2",
    "sequelize": "^4.15.0",
    "speckoloo": "^0.7.2",
    "sqlite3": "^3.1.13"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.10.0",
    "nodemon": "^1.12.1",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  }
